        script(src="../../main.js")
        script(src="../js/script.js", type="module", defer)
        script(src="../ripples/interact.js", defer)
        script(src="../ripples/touch.js", defer)
        script(src="../ripples/samples.js", defer)
        //- script(src="../text/text_d3_caption.js", defer)
        style.
            .text.moving{
                opacity:1;
            }
            canvas{
                opacity:0.4;
            }
            main{
                width:100vw;
                height:100vh;
                overflow:hidden;
            }
    body.words.fullpage
    main.ripples
        #canvas.ripples
        #content.ripples
            #water-ripples
                #water-ripples-title
                    h1.ripples
                //- object.svg-import.ripples(style="display:none;" id="painting" type="image/svg+xml" data="interact_painting.svg")
                img(src="reflection_edge.png" style="filter:brightness(40%)" alt="water" crossorigin="" data-sampler="planeTexture")
        // INSTRUCTIONS ON PAGE LOAD
        section.instructions.flex.scrollable
            h1.instructions__number - 2 - 
            h1.instructions Water's Edge
            .instructions__text
                p Where is the water's edge? 
                p Is it at the piling -- the canal's watertight wall? 
                p At the skyline? 
                p Splashed along the oar? During the mooring of a boat? 
                p Does it exist in the reflection on the skin of the water?
                button.button.startElement.allowDefault#nav__start Start 
            .instructions__interactions
                h2.instructions__heading Interactions
                .break
                ul
                    li
                        include ../interactions/single_click
                    li
                        include ../interactions/explore
                    li
                        include ../interactions/drag_words
                    li
                        include ../interactions/touch_hold
                    li
                        include ../interactions/multitouch
                .break
                h2.instructions__heading Changes
                .break
                ul
                    li
                        include ../interactions/sound
                    li
                        include ../interactions/colour
                    li            
                        include ../interactions/movement
                    //- li            
                    //-     include ../interactions/ripples
                    //- include ../interactions/brightness
                                
            include ../footer__back