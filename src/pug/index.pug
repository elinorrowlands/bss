html(lang="en")
    head
        include head
        script(src="./main.js" defer)
        title Biodivergent Sites and Sounds
        script.
            let animationCount = 1;

            const animation = ()=>{
                let waterscale = animationCount % 2 == 0 ? 6 : 7;
                document.querySelector('#water').style.transform = `scale(${waterscale})`;
                animationCount++;
            }

            animation();
            
            document.body.addEventListener('load',()=>{
                animation();
                window.setInterval(animation, 60000);
            })
    body
        //- banner 
        main.splash
            include svg/title.svg
            include svg/bg.svg
            .nav__icon
                a(href="https://www.elinorrowlands.com/biodivergent-sites-and-sounds")
                    img.icon.icon__info(src='icons/noun-information-150178-FFFFFF.svg' title="Information")  
        footer
            include footer

       

            