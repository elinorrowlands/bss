html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Biodivergent Sites and Sounds
        link(rel='stylesheet', href='style.css')
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Kanit:wght@100;200&family=Nunito:wght@200&display=swap" rel="stylesheet")
        script(src="./main.js" defer)
    body
        //- banner 
        main.splash
            include svg/title.svg
            include svg/bg.svg
            .nav__icon
                a(href="https://www.elinorrowlands.com/biodivergent-sites-and-sounds")
                    img.icon.icon__info(src='icons/noun-information-150178-FFFFFF.svg' title="Information")
                
        footer
            include footer

        script.

            let animationCount = 1;

            const animation = ()=>{
                let scale = animationCount % 2 == 0 ? 4 : 6;
                document.querySelector('#water').style.transform = `scale(${scale})`;
                animationCount++;
            }
            document.body.addEventListener('load',()=>{
                animation();
                window.setInterval(animation, 60000);
            })